---
import Layout from "../components/Layout.astro";
import Articles from "../components/Articles";
---

<Layout tituloPagina="About Us">
  <section class="section__articles">
    <h2>Blog Articles</h2>
    <div class="container__articles">
      <Articles />
    </div>
  </section>

  <style>
    .section__articles {
      background-color: rgb(237, 238, 239);
    }
    h2 {
      color: black;
      padding-left: 2rem;
      font-size: 1.4rem;
      margin-top: 10px;
    }
    .container__articles {
      width: 92%;
      margin: 15px auto;
      margin-bottom: 30px;
    }
  </style>
</Layout>
